                <option value="portugues">Português</option>
            </select>
            <div id="question-section" style="display: none;">
                <p id="question-text"></p>
                <button onclick="checkAnswer('a')">A) <span id="option-a"></span></button><br>
                <button onclick="checkAnswer('b')">B) <span id="option-b"></span></button><br>
                <button onclick="checkAnswer('c')">C) <span id="option-c"></span></button><br>
                <button onclick="checkAnswer('d')">D) <span id="option-d"></span></button><br>
            </div>
            <div id="result" class="result"></div>
        </div>
    </main>

    <script>
