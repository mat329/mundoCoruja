        let currentQuestionIndex = 0;
        let currentCategory = "";

        const categorySelect = document.getElementById('category');
        const questionSection = document.getElementById('question-section');
        const questionText = document.getElementById('question-text');
        const optionA = document.getElementById('option-a');
        const optionB = document.getElementById('option-b');
        const optionC = document.getElementById('option-c');
        const optionD = document.getElementById('option-d');
        const result = document.getElementById('result');

        categorySelect.addEventListener('change', function() {
            currentCategory = categorySelect.value;
            if (currentCategory) {
                currentQuestionIndex = 0;
                loadQuestion();
                questionSection.style.display = 'block';
                result.textContent = '';
            } else {
                questionSection.style.display = 'none';
            }
        });

        function loadQuestion() {
            const question = questions[currentCategory][currentQuestionIndex];
            questionText.textContent = question.question;
            optionA.textContent = question.options.a;
            optionB.textContent = question.options.b;
            optionC.textContent = question.options.c;
            optionD.textContent = question.options.d;
            result.textContent = '';
        }

        function checkAnswer(selectedOption) {
            const correctAnswer = questions[currentCategory][currentQuestionIndex].correctAnswer;
            if (selectedOption === correctAnswer) {
                result.textContent = "Correto! Parabéns!";
                result.style.color = "green";
                currentQuestionIndex++;
                if (currentQuestionIndex < questions[currentCategory].length) {
                    setTimeout(loadQuestion, 1000); // Carrega a próxima pergunta após 1 segundo
                } else {
                    result.textContent = "Você completou todas as perguntas dessa categoria!";
                }
            } else {
                result.textContent = "Incorreto. Tente novamente.";
                result.style.color = "red";
            }
        }
    </script>
